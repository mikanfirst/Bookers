<%= flash[:success] %>
<h1>Books</h1>

<table>
  <tread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </tread>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book.id) %></td>
      <td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>
<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    </ul>
      <% end %>
<% end %>
<%= form_with model: @book, url:"/books", local:true do |f| %>
    <div>Title</div>
    <%= f.text_field :title %>
    <div>Body</div>
    <%= f.text_field :body %>
    <br><%= f.submit 'Create Book' %></br>
<% end %>


















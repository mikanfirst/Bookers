<body>
  <div class=f-message><%= flash[:success] %></div>
  <h1>Books</h1>

  <table>
    <tread>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </tread>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h1>New Book</h1>
  <%= render 'layouts/error_messages' %>
  <%= form_with model: @book, url:"/books", local:true do |f| %>
      <div class=field>
        <label>Title</label>
      <%= f.text_field :title %>
      </div>

      <div class=field>
        <label>Body</label>
        <%= f.text_field :body %>
      </div>
      <div class=action>
        <%= f.submit 'Create Book' %>
        </div>
  <% end %>
</body>
















